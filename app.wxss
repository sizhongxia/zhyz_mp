@import "icon.wxss";
@import "colorui-rpx.wxss";

.options {
  position: fixed;
  bottom: 0;
  height: 120rpx;
  line-height: 120rpx;
}

.width-full {
  width: 750rpx;
}

.container {
  width: 750rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.h120 {
  height: 120rpx;
  color: white;
  text-align: center;
  line-height: 120rpx;
}

.text-light {
  font-weight: 300;
}

.shadow {
  box-shadow:0 1rpx 6rpx rgba(0, 0, 0, 0.3);
}

.ovtxt {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}