<custom style='height:{{CustomBar}}px;'>
  <bar class='fixed gradual-blue' style='height:{{CustomBar}}px;padding-top:{{StatusBar}}px;'>
    <navigator class='action' open-type='navigateBack' delta='1' hover-class='none'>
      <icon class='icon-back' /> 返回
    </navigator>
    <view class='content'>视频直播</view>
  </bar>
</custom>

<live-player id='rtmpPlayId' src="rtmp://pili-publish.yeetong.cn/yeetong-zhny/5c2045427e298eb6d157ca7a" mode="RTC" autoplay="{{false}}" bindstatechange="rtmpPlayStateChange" binderror="rtmpPlayError" style="width: 750rpx; height: 480rpx;" />

<view class='padding-sm'>
  <button class='margin-tb-sm bg-green' bindtap='toConnectSocket'>连接</button>
  <button class='margin-tb-sm bg-green' bindtap='toTopic'>订阅</button>
  <button class='margin-tb-sm bg-green' bindtap='toPullStream'>推流</button>
  <button class='margin-tb-sm bg-green' bindtap='rtmpPlay'>播放</button>
  <button class='margin-tb-sm bg-green' bindtap='rtmpPause'>暂停</button>
  <button class='margin-tb-sm bg-green' bindtap='rtmpResume'>恢复</button>
  <button class='margin-tb-sm bg-green' bindtap='rtmpFullScreen'>全屏</button>
  <button class='margin-tb-sm bg-green' bindtap='rtmpExitFullScreen'>退出全屏</button>
</view>
<view class='padding-sm'>
  {{lastOptionTxt}}
</view>