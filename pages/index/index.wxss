/* pages/index/index.wxss */

.banner {
  width: 750rpx;
  height: 320rpx;
}

.banner image {
  width: 100%;
  height: 320rpx;
}

.m-farm-info {
  display: flex;
  height: 180rpx;
  width: 750rpx;
  flex-flow: row nowrap;
  justify-content: space-between;
  background-color: #fff;
}

.m-farm-info .m-farm-qrcord {
  width: 140rpx;
  margin: 20rpx;
  background: #f2f2f2;
}

.m-farm-info .m-farm-baseinfo {
  width: 550rpx;
  height: 140rpx;
  margin: 20rpx 20rpx 20rpx 0rpx;
  background: #f2f2f2;
}

.m-monitor {
  display: flex;
  height: 181rpx;
  width: 750rpx;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
}

.m-monitor .item {
  flex: 1;
  display: block;
  padding: 20rpx 0;
}
.panel {
  width: 100%;
}

.canvas {
  width: 100%;
  height: 260px;
}
