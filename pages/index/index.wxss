/* pages/index/index.wxss */

.banner {
  width: 750rpx;
  height: 417rpx;
}

.banner image {
  width: 100%;
  height: 417rpx;
}

.m-monitor {
  display: flex;
  height: 181rpx;
  width: 750rpx;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
}

.m-monitor .item {
  flex: 1;
  display: block;
  padding: 20rpx 0;
}

.m-monitor div {
  display: block;
  width: 58rpx;
  height: 58rpx;
  margin-bottom: 12rpx;
  font-size: 34rpx;
  text-align: center;
  margin: 0 auto;
  line-height: 58rpx;
  color: #333;
}

.m-monitor text {
  display: block;
  font-size: 24rpx;
  text-align: center;
  margin: 0 auto;
  line-height: 1;
  color: #333;
}

.canvas {
  width: 100%;
  height: 260px;
}
