/* pages/index/index.wxss */

.m-farm-baseinfo-item {
  width: 470rpx;
  line-height: 47.5rpx;
  font-size: 26rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.h120 {
  height: 120rpx;
  color: white;
  text-align: center;
  line-height: 120rpx;
}

.typeName {
  margin: 30rpx auto 2rpx;
  font-weight: 900;
}

.typeInfo {
  line-height: 36rpx;
  font-size: 24rpx;
  color: #999;
}

.width-full {
  width: 750rpx;
}

.page-body-button {
  margin-bottom: 30rpx;
}

live-player {
  width: 100%;
  height: 225px;
}

card.article>item .title {
  font-size: 28rpx;
  font-weight: normal;
  word-wrap: normal;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #333;
  line-height: 68rpx;
  padding: 0;
  overflow: hidden;
  height: 2rem;
}

card.article>item .content {
  padding: 0 0rpx;
}

card.article>item .content > image {
  height: 180rpx;
}

.animation-show {
  animation: show 1s ease;
  animation-fill-mode: forwards;
}

.checkin-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(0, 0, 0, 0.45);
  opacity: 1;
  z-index: 99999999;
}

.gradient-text {
  background-image: linear-gradient(-110deg, #0081ff 0%, #6681ff 53%, #bb81ff 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}