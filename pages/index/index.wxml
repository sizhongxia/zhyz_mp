<view class="container">
  <swiper class="banner" indicator-dots="true" autoplay="true" interval="3000" duration="1000">
    <swiper-item wx:for="{{banner}}" wx:key="{{item.id}}">
      <image src="{{item.picUrl}}" background-size="cover"></image>
    </swiper-item>
  </swiper>

  <view class="m-monitor">
    <block class="item" wx:for="{{channel}}" wx:key="{{item.id}}">
      <div>{{item.value}}</div>
      <text>{{item.name}}</text>
    </block>
  </view>

  <canvas canvas-id="ringCanvas" class="canvas" bindtouchstart="touchHandler"></canvas>

  <canvas canvas-id="lineCanvas" disable-scroll="true" class="canvas" bindtouchstart="touchHandler"></canvas>

  <canvas canvas-id="columnCanvas" class="canvas" bindtouchstart="touchHandler"></canvas>
  
</view>
