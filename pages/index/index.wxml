<custom style="height:{{CustomBar}}px;">
  <bar class="fixed gradual-blue" style="height:{{CustomBar}}px;padding-top:{{StatusBar}}px;">
    <view class='content'>智慧·物联养殖</view>
  </bar>
</custom>

<view class="container">
  <swiper class="screen-swiper square-dot width-full" indicator-dots="true" autoplay="true" interval="6000" duration="600">
    <swiper-item wx:for="{{banners}}" wx:key="{{item.id}}">
      <image bindtap='previewImage' data-src="{{item.picUrl}}" src="{{item.picUrl}}" mode='aspectFill' style='width:750rpx;'></image>
    </swiper-item>
  </swiper>
  <view wx:if="{{ weather != '' }}" class='weather'>
    {{weather}}
  </view>
  <card class="article width-full">
    <item style='margin:0;border-radius:0;'>
      <view class="title" style='line-height:60rpx; padding:15rpx 30rpx 0;'>{{farm.farmName}}</view>
      <view class="content">
        <image bindtap='previewImage' data-src="{{farm.qrCodeUrl}}" style='width: 190rpx;height:190rpx;' src="{{farm.qrCodeUrl}}" mode="aspectFit"></image>
        <view class="desc" style='margin-top:30rpx;height:144rpx;'>
          <view class='m-farm-baseinfo-item' bindtap='showMore' data-content='{{farm.address}}'>农场位置：{{farm.address}}</view>
          <view class='m-farm-baseinfo-item' bindtap='showMore' data-content='{{farm.acreage}}'>占地面积：{{farm.acreage}}</view>
          <view class='m-farm-baseinfo-item' bindtap='showMore' data-content='{{farm.website}}'>宣传网址：{{farm.website}}</view>
        </view>
      </view>
    </item>
  </card>

  <list class="grid no-border col-4 width-full margin-top" bindtap='toEquipment'>
    <item wx:for="{{monitorInfo}}" wx:key="typeId" style="{{ index < 3 ? 'border-right:1px solid #eee !important;' : '' }}">
      <text class='typeName'>{{item.typeName}}</text>
      <view class='typeInfo'>{{item.online}}</view>
      <view class='typeInfo'>{{item.other}}</view>
    </item>
  </list>

