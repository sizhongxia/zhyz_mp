<custom style='height:{{CustomBar}}px;'>
  <bar class='fixed gradual-blue' style='height:{{CustomBar}}px;padding-top:{{StatusBar}}px;'>
    <navigator class='action' open-type='navigateBack' delta='1' hover-class='none'>
      <icon class='icon-back' /> 返回列表
    </navigator>
    <view class='content'>新增巡检记录</view>
  </bar>
</custom>

<form>
  <form-group class="margin-top">
    <view class='title'>选择厂区</view>
    <picker bindchange="areaPickerChange" value="{{index}}" range="{{areas}}" range-key="areaName">
      <view class="picker">
        {{ form.farmAreaName == '' ? '无厂区' : form.farmAreaName }}
      </view>
    </picker>
  </form-group>
  <form-group>
    <view class='title'>具体位置</view>
    <input placeholder="请输入具体巡检位置" class='radius' name='input' bindinput="inputInspectionPosition" value="{{form.inspectionPosition}}" style='text-align:right;'></input>
  </form-group>
  <form-group>
    <view class='title'>巡检日期</view>
    <picker mode="date" value="{{form.inspectionDate}}" start="2019-01-01" end="2099-09-01" bindchange="inspectionDateChange">
      <view class="picker">
        {{form.inspectionDate}}
      </view>
    </picker>
  </form-group>
  <form-group>
    <view class='title'>巡检时间</view>
    <picker mode="time" value="{{form.inspectionTime}}" start="00:00" end="23:59" bindchange="inspectionTimeChange">
      <view class="picker">
        {{form.inspectionTime}}
      </view>
    </picker>
  </form-group>
  <form-group>
    <view class='title'>巡检人</view>
    <input placeholder="请输入巡检人" class='radius' name='input' bindinput="inputOperator" value="{{form.operator}}" style='text-align:right;'></input>
  </form-group>
  <form-group>
    <view class='title'>巡检正常</view>
    <switch class='green sm' bindchange="switchNormalState" checked="{{form.isNormal == 1}}"/>
  </form-group>
  <form-group>
    <textarea placeholder="请输入巡检描述" maxlength="200" placeholder-class='placeholder' bindinput="inputInspectionRemark" value='{{form.inspectionRemark}}'></textarea>
  </form-group>

  <bar class="margin-top">
    <view class='action'>
      <icon class='icon-titles text-blue' /> 上传图片 (最多可上传8张)
    </view>
  </bar>
  <form-group>
    <view class="grid col-3 grid-square flex-sub">
      <view class="padding-xs bg-img" wx:for="{{ form.inspectionPics }}" wx:key="item" style="background-image:url({{item}});">
        <tag class="bg-red" bindtap="removePic" data-index="{{index}}">
          <icon class='icon-close'></icon>
        </tag>
      </view>
      <view class="padding-xs solids" bindtap='selectInspectionPic'>
        <icon class='icon-cameraadd'></icon>
      </view>
    </view>
  </form-group>
</form>
<view class='h120 width-full'>Yeetong.cn</view>

<bar class="btn-group options width-full">
  <button loading='{{submiting}}' class='bg-green shadow-blur round lg' bindtap='toAdd'>
    <icon class='icon-check'></icon> 保存
  </button>
</bar>