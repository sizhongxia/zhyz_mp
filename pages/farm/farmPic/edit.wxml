<card class="case">
  <item class="shadow">
    <view class='image'>
      <image mode='aspectFill' bindtap='previewImage' data-src='{{form.picUrl}}' class='image-size' src="{{form.picUrl}}"></image>
    </view>
  </item>
</card>
<form>
  <form-group>
    <view class='title'>图片标题</view>
    <input placeholder="请输入图片标题" class='radius' name='input' bindinput="inputPicTitle" value="{{form.title}}" style='text-align:right;'></input>
  </form-group>
  <form-group>
    <view class='title'>图片序号</view>
    <input placeholder="请输入图片序号" class='radius' name='input' bindinput="inputSortNum" value="{{form.sortNum}}" style='text-align:right;'></input>
  </form-group>
</form>
<bar class="btn-group options width-full">
  <button loading='{{submiting}}' class='bg-green round lg' bindtap='toSave'>
    <icon class='icon-check'></icon> 保存
  </button>
</bar>