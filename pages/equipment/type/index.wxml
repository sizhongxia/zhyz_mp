<list class="menu menu-avatar no-padding" wx:if="{{equipments.length === 0}}">
  <view class="padding-xl radius shadow-warp bg-white" style='box-shadow: none;text-align:center;'>暂无设备</view>
</list>
<list class="menu menu-avatar" wx:if="{{typeId!='SP'}}">
  <item wx:for="{{equipments}}" wx:key="equipmentId" data-equipment-id="{{item.equipmentId}}" bindtap='toStatistic'>
    <avatar class="radius lg {{item.online ? 'bg-green' : 'bg-red'}}">
      <text>{{item.online ? '在线' : '离线'}}</text>
    </avatar>
    <view class='content'>
      <!--<tag wx:if="{{item.online}}" class='bg-green round'></tag><tag wx:else class='bg-red round'></tag> -->
      <view>{{item.equipmentName}} <icon wx:if="{{item.warning}}" class='icon-notice text-orange'/></view>
      <view class='text-gray text-sm'>{{item.equipmentSn}} | {{item.equipmentModelName}}</view>
    </view>
    <view class='action'>
      <view class='text-xs'>{{item.lastUpdateTime}}</view>
      <view class='text-sm'>{{item.collectVal}}</view>
    </view>
  </item>
</list>
<list class="menu menu-avatar" wx:else>
  <item wx:for="{{equipments}}" wx:key="cameraId" data-equipment-id="{{item.cameraId}}" bindtap='toVideoLive'>
    <avatar class="radius lg {{item.online ? 'bg-green' : 'bg-red'}}">
      <text>{{item.online ? '在线' : '离线'}}</text>
    </avatar>
    <view class='content'>
      <view>{{item.cameraName}}</view>
      <view class='text-gray text-sm'>{{item.brandName}}</view>
    </view>
    <view class='action'>
      <view class='text-xs'>{{item.lastUpdateTime}}</view>
    </view>
  </item>
</list>