.base {
  width: 100%;
  background:#fff;
}

.base .icon {
  text-align: center;
  padding: 68rpx 0 0 0;
}

.base .icon image {
  width: 180rpx;
  height: 180rpx;
}

.base .icon .title {
  line-height:64rpx;
