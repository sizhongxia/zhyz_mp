  justify-content: space-between;
  margin-top: 18rpx;
}

.base .dev .itm {
  width:100%;
  text-align: center;
  font-size: 28rpx;
  font-weight:300;
  color: #808080;
}

.base .dev .itm .title {
  line-height: 62rpx;
  color: #000000;
}

